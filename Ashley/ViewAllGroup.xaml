                   Text="Group Management Information System" Height="37" VerticalAlignment="Top" Grid.ColumnSpan="3" Margin="10,13,282,0"/>

            <TextBlock Grid.Column="1" Grid.Row="2" FontSize="28" 
                   Text="All group lists" Height="37" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="137,3,126,0"/>
            <StackPanel HorizontalAlignment="Left" Grid.Column="2"/>
            <Button Margin="10,0,299,0" Grid.Column="3">X</Button>
        
        
    </Grid>
</Window>
